<%= form_for(@debt) do |f| %>
  <% if @debt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@debt.errors.count, "error") %> prohibited this debt from being saved:</h2>

      <ul>
      <% @debt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br>
  <div class="field">
    <font color=blue>Toplam Borç:</font><br>
    <%= f.text_field :total %><br>
  </div><div class="field"><br>
    <font color=blue>Ödenen Borç:</font><br>
    <%= f.text_field :paid %><br>
  </div>
  
  <div class="field"><br>
    <font color=blue> Kalan Borç:</font><br>
    <%= f.text_field :payable %><br>
  </div><br>
  <div class="field">
    <font color=blue>Borç Alınan Tarih:<br></font>
    <%= f.date_select :date_of_issue %>
  </div><br>
  <div class="field">
    <font color=blue>Borç Ödenecek Tarih:<br></font>
    <%= f.date_select :payable_date %>
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
